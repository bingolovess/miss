<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:brushes="http://schemas.android.com/apk/res-auto"
	android:id="@+id/tools"
    style="@style/ActionBar.Bar"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:paddingRight="@dimen/tool_palette_gutter"
	>
    <!-- felt tip pen -->
    <view
        class="com.miss.paint.ToolButton$PenToolButton"
        android:id="@+id/pen_thin"
        android:tag="pen_thin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="1"
        brushes:strokeWidthMin="2dp"
        brushes:strokeWidthMax="4dp"
        />
    <!-- small brush -->
    <view
        class="com.miss.paint.ToolButton$PenToolButton"
        android:id="@+id/pen_medium"
        android:tag="pen_medium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="1"
        brushes:strokeWidthMin="0.5dp"
        brushes:strokeWidthMax="10dp"
        />
    <!-- large brush -->
    <view
        class="com.miss.paint.ToolButton$PenToolButton"
        android:id="@+id/pen_thick"
        android:tag="pen_thick"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="1"
        brushes:strokeWidthMin="2dp"
        brushes:strokeWidthMax="24dp"
        />
    <!-- fat brush -->
    <view
        class="com.miss.paint.ToolButton$PenToolButton"
        android:id="@+id/fat_brush"
        android:tag="pen_brush"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="1"
        brushes:strokeWidthMin="18dp"
        brushes:strokeWidthMax="48dp"
        />
	<LinearLayout
	    android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/tool_palette_gutter"
	    >
	    <view
           class="com.miss.paint.ToolButton$PenTypeButton"
           android:id="@+id/whiteboard_brush"
           android:tag="type_whiteboard"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="3dp"
           android:layout_weight="1"
           brushes:penType="whiteboard"
           />
	    <view
           class="com.miss.paint.ToolButton$PenTypeButton"
           android:id="@+id/felttip_brush"
           android:tag="type_felttip"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="3dp"
           android:layout_weight="1"
           brushes:penType="feltTip"
           />
	    <view
           class="com.miss.paint.ToolButton$PenTypeButton"
           android:id="@+id/airbrush_brush"
           android:tag="type_airbrush"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="1dp"
           android:layout_weight="1"
           brushes:penType="airbrush"
           />
	    <view
           class="com.miss.paint.ToolButton$PenTypeButton"
           android:id="@+id/fountainpen_brush"
           android:tag="type_fountain"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="2dp"
           android:layout_weight="1"
           brushes:penType="fountainpen"
           />
    </LinearLayout>
</LinearLayout>
